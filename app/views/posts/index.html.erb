<h1>投稿一覧</h1>
<table class="posts">

<% @posts.each do |post| %>
  <tr>
    <td class="content"><%= post.content %></td>
  </tr>
  <tr>
    <td class="button"><%= link_to "編集", edit_post_path(post.id) %></td>
  </tr>
  <tr>
    <td class="button"><%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <tr>
    <td><hr></td>
  <tr>
<% end %>

</table>
