<h1>新規投稿</h1>

<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li class="error_message"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="post_content">
    <%= form.label :"本文" %>
    <%= form.text_field :content, class:"content" %>
  </div>
  <div class="submit">
    <%= form.submit :"投稿", class:"submit_button" %>
  </div>
<% end %>
